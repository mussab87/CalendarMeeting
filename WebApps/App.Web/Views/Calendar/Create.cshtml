@model CreateMeetingDto
@{
    ViewData["Title"] = "إنشاء اجتماع جديد";
}

@if (ViewBag.success != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            toastr.success('@ViewBag.success');
        });
    </script>
}
@if (ViewBag.error != null)
{
