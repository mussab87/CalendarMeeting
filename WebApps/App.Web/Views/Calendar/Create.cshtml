    }
</script>

<script>
    // Location creation functionality
    document.addEventListener('DOMContentLoaded', function() {
        // Wait for jQuery to be available
        function waitForJQuery() {
            if (typeof $ !== 'undefined') {
                // Open modal when + button is clicked
                $('#btnAddLocation').on('click', function(e) {
                    e.preventDefault();
                    $('#newLocationName').val('');
                    $('#locationErrorMsg').addClass('d-none');
                    $('#addLocationModal').modal('show');
                });

                // Handle close button clicks
                $('#modalCloseBtn, #modalCancelBtn').on('click', function() {
                    $('#addLocationModal').modal('hide');
                });

                // Handle modal close events
                $('#addLocationModal').on('hidden.bs.modal', function() {
                    $('#newLocationName').val('');
                    $('#locationErrorMsg').addClass('d-none');
                    $('#btnSaveLocation').prop('disabled', false);
                });

                // Handle Enter key in input field
                $('#newLocationName').on('keypress', function(e) {
                    if (e.which === 13) { // Enter key
                        e.preventDefault();
                        $('#btnSaveLocation').click();
                    }
                });

                // Save new location
                $('#btnSaveLocation').on('click', function() {
                    var locationName = $('#newLocationName').val().trim();

                    if (!locationName) {
                        $('#locationErrorMsg span').text('يرجى إدخال اسم المكان');
                        $('#locationErrorMsg').removeClass('d-none');
                        return;
                    }

                    // Disable button to prevent double submission
                    $(this).prop('disabled', true);

                    $.ajax({
                        url: '/Calendar/CreateLocation',
                        type: 'POST',
                        contentType: 'application/json',
                        headers: {
                            [window.AntiForgeryHeaderName || 'X-CSRF-TOKEN']: window.AntiForgeryToken
                        },
                        data: JSON.stringify({ LocationName: locationName }),
                        success: function(response) {
                            if (response.success) {
                                // Add new option to dropdown
                                var newOption = new Option(response.locationName, response.locationId, true, true);
                                $('#LocationId').append(newOption).trigger('change');

                                // Show success message
                                toastr.success(response.message);

                                // Close modal
                                $('#addLocationModal').modal('hide');
                            } else {
                                $('#locationErrorMsg span').text(response.message);
                                $('#locationErrorMsg').removeClass('d-none');
                            }
                            $('#btnSaveLocation').prop('disabled', false);
                        },
                        error: function(xhr) {
                            var errorMsg = 'حدث خطأ أثناء إضافة الموقع';
                            if (xhr.responseJSON && xhr.responseJSON.message) {
                                errorMsg = xhr.responseJSON.message;
                            }
                            $('#locationErrorMsg span').text(errorMsg);
                            $('#locationErrorMsg').removeClass('d-none');
                            $('#btnSaveLocation').prop('disabled', false);
                        }
                    });
                });
            } else {
                // Retry after a short delay if jQuery not ready
                setTimeout(waitForJQuery, 100);
            }
        }

        waitForJQuery();
    });
</script>

