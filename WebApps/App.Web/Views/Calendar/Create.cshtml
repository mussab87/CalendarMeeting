                    }
                `)
                .appendTo('head');
        } else {
            // Retry after a short delay if jQuery/Select2 not ready
            setTimeout(initializeSelect2, 100);
        }
    }

    // Try to initialize immediately, or when DOM is ready
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initializeSelect2);
    } else {
