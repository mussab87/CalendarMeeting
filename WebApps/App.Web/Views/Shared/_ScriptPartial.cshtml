<script>
    // Enable Bootstrap tooltips
    $(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });

    // Dark/Light mode toggle
    document.addEventListener('DOMContentLoaded', function () {
        var themeToggleBtn = document.getElementById('themeToggleBtn');
        if (themeToggleBtn) {
            themeToggleBtn.addEventListener('click', function (e) {
                e.preventDefault();
                document.body.classList.toggle('dark-mode');
                if (document.body.classList.contains('dark-mode')) {
                    localStorage.setItem('theme', 'dark');
                } else {
                    localStorage.setItem('theme', 'light');
                }
            });
        }
        // Apply saved theme on load
        if (localStorage.getItem('theme') === 'dark') {
            document.body.classList.add('dark-mode');
        }

        // Initialize User Panel (Account Details Sidebar)
        var quickUserToggle = document.getElementById('kt_quick_user_toggle');
        var quickUserClose = document.getElementById('kt_quick_user_close');
        var quickUserPanel = document.getElementById('kt_quick_user');

        if (quickUserToggle && quickUserPanel) {
            quickUserToggle.addEventListener('click', function(e) {
                e.preventDefault();
                quickUserPanel.classList.add('show');
                document.body.classList.add('offcanvas-on');
            });
        }

        if (quickUserClose && quickUserPanel) {
            quickUserClose.addEventListener('click', function(e) {
                e.preventDefault();
                quickUserPanel.classList.remove('show');
                document.body.classList.remove('offcanvas-on');
            });
        }

        // Close panel when clicking outside
        document.addEventListener('click', function(e) {
            if (quickUserPanel && quickUserPanel.classList.contains('show')) {
                if (!quickUserPanel.contains(e.target) && !quickUserToggle.contains(e.target)) {
                    quickUserPanel.classList.remove('show');
                    document.body.classList.remove('offcanvas-on');
                }
            }
        });
    });
</script>

