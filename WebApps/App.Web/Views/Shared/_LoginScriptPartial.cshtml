<script>
    // New JS from index2.html for toggling terms/login and ripple effect
    const loginForm = document.getElementById('loginForm');
    const termsContent = document.getElementById('termsContent');
    const showTermsBtn = document.getElementById('showTerms');
    const backToLoginBtn = document.getElementById('backToLogin');

    // Initial state: show login, hide terms
    window.addEventListener('DOMContentLoaded', function() {
        if (loginForm && termsContent) {
            loginForm.classList.remove('hide');
            termsContent.classList.add('hide');
        }
    });

    if (showTermsBtn && loginForm && termsContent) {
        showTermsBtn.addEventListener('click', function (e) {
            e.preventDefault();
            loginForm.classList.add('hide');
            termsContent.classList.remove('hide');
        });
    }

    if (backToLoginBtn && loginForm && termsContent) {
        backToLoginBtn.addEventListener('click', function (e) {
            e.preventDefault();
            termsContent.classList.add('hide');
            loginForm.classList.remove('hide');
        });
    }

    // Ripple effect for all .btn
    document.querySelectorAll('.btn').forEach(btn => {
        btn.addEventListener('click', function(e) {
            const ripple = document.createElement('span');
            ripple.className = 'ripple';
            const rect = btn.getBoundingClientRect();
            ripple.style.width = ripple.style.height = Math.max(rect.width, rect.height) + 'px';
            ripple.style.left = (e.clientX - rect.left - rect.width/2) + 'px';
            ripple.style.top = (e.clientY - rect.top - rect.height/2) + 'px';
            btn.appendChild(ripple);
            setTimeout(() => ripple.remove(), 600);
        });
    });
</script>

