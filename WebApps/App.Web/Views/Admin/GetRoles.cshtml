@model PaginatedResult<RoleDto>
@{
    ViewData["Title"] = "الصلاحيات";
    ViewData["action"] = "GetRoles";

    ViewData["PageSize"] = Model.PageSize;
    ViewData["SearchString"] = Model.SearchString;
}

<style>
    .actions-cell {
        text-align: center !important;
        vertical-align: middle !important;
    }

    .actions-buttons {
        display: flex !important;
        justify-content: center !important;
        align-items: center !important;
        gap: 8px !important;
    }

        .actions-buttons .btn {
            margin: 0 !important;
        }
</style>

<!--begin::Container-->
<div class="container">

    <!--begin::Card-->
    <div class="card card-custom">
        <div class="card-header">
            <div class="card-title">
                <span class="card-icon">
                    <i class="flaticon2-favourite text-primary"></i>
                </span>
                <h3 class="card-label">صلاحيات النظام</h3>
            </div>
            <div class="card-toolbar">
                <!--begin::Button-->
                <a id="addRoleButton" class="btn btn-primary font-weight-bolder">
                    إضافة صلاحية
                    <i class="la la-plus"></i>
                </a>
                <!-- Modal Container -->
                <div class="modal fade" id="roleModal" tabindex="-1" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-xl" role="document">
                        <div id="modalContent">
                            <partial name="AddEditRole" model="@Model.RoleDto" />
                        </div>

                    </div>
                </div>
                &nbsp;
                <!--begin::Dropdown-->
                <div class="dropdown dropdown-inline mr-2">
                    <button type="button" class="btn btn-light-primary font-weight-bolder dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        طباعة
                        <i class="la la-download"></i>
                    </button>
                    <!--begin::Dropdown Menu-->
                    <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
                        <ul class="nav flex-column nav-hover">
                            <li class="nav-header font-weight-bolder text-uppercase text-primary pb-2">اختر من الاختيارات:</li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon la la-print"></i>
                                    <span class="nav-text">Print</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon la la-copy"></i>
                                    <span class="nav-text">Copy</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon la la-file-excel-o"></i>
                                    <span class="nav-text">Excel</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon la la-file-text-o"></i>
                                    <span class="nav-text">CSV</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon la la-file-pdf-o"></i>
                                    <span class="nav-text">PDF</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!--end::Dropdown Menu-->
                </div>
                <!--end::Dropdown-->
            </div>
        </div>
        <div class="card-body" style="padding-top: 10px;">
            <div class="text-center pb-2" id="errorUsers" style="font-size: 16px; display: none;">
                <div class="text-danger">
                    <label id="error"></label>
                </div>
            </div>

            <!--begin: Search-->
            <partial name="_PagedListSearch" />
            <!--end: Search-->
            <!--begin: Grouped Table-->
            @if (Model.Items.Any())
            {
                var groupedRoles = Model.Items.GroupBy(r => r.IsDeleted == true ? "تم الحذف" : "مفعل").OrderBy(g => g.Key);

                @foreach (var roleStatus in groupedRoles)
                {
                    <div class="card card-custom mb-5">
                        <div class="card-header">
                            <div class="card-title">
                                <span class="card-icon">
                                    @if (roleStatus.Key == "مفعل")
                                    {
                                        <i class="flaticon2-shield text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="flaticon2-delete text-danger"></i>
                                    }
                                </span>
                                <h3 class="card-label">@roleStatus.Key</h3>
                                <span class="badge badge-primary badge-pill ml-2">@roleStatus.Count()</span>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <table class="table table-bordered table-hover table-checkable mb-0">
                                <thead class="thead-light">
                                    <tr role="row">
                                        <th>اسم الصلاحية</th>
                                        <th>اسم الصلاحية عربي</th>
                                        <th>وصف الصلاحية</th>
                                        <th>ادخال بواسطة</th>
                                        <th>تاريخ الانشاء</th>
                                        <th>الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in roleStatus.OrderBy(r => r.Name))
                                    {
                                        <tr>
                                            <td>
                                                <span class="font-weight-bold text-dark">@role.Name</span>
                                            </td>
                                            <td>
                                                <span class="text-muted">@role.RoleNameArabic</span>
                                            </td>
                                            <td>
                                                <span class="text-muted">@role.Description</span>
                                            </td>
                                            <td>
                                                <span class="text-muted">@role.CreatedById</span>
                                            </td>
                                            <td>
                                                <span class="text-muted">@role.CreatedDate.Value.ToString("yyyy/MM/dd")</span>
                                            </td>
                                            <td class="actions-cell">
                                                <div class="actions-buttons">
                                                    <a id="updateRoleButton" onclick="updateRoleButton('@role.Id')" class="btn btn-sm btn-default btn-text-primary btn-hover-primary btn-icon" title="تعديل الصلاحية">
                                                        <i class="la la-edit"></i>
                                                    </a>
                                                    @if (role.IsDeleted != true)
                                                    {
                                                        <a onclick="deleteRoleButton('@role.Id')" class="btn btn-sm btn-default btn-text-primary btn-hover-primary btn-icon" title="حذف الصلاحية">
                                                            <i class="la la-trash"></i>
                                                        </a>
                                                    }
                                                    <a onclick="addRolePermissionButton('@role.Id')" class="btn btn-sm btn-default btn-text-primary btn-hover-primary btn-icon" title="صلاحيات الشاشات">
                                                        <i class="flaticon2-document"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="card card-custom">
                    <div class="card-body text-center py-10">
                        <div class="symbol symbol-100 symbol-light-warning mb-5">
                            <span class="symbol-label">
                                <i class="flaticon2-information text-warning"></i>
                            </span>
                        </div>
                        <h3 class="text-dark font-weight-bolder mb-3">لا توجد صلاحيات</h3>
                        <p class="text-muted font-weight-bold mb-5">لم يتم العثور على أي صلاحيات في النظام</p>
                        <button type="button" class="btn btn-primary" id="addRoleButton">
                            <i class="la la-plus"></i>
                            إضافة صلاحية جديدة
                        </button>
                    </div>
                </div>
            }
            <!--end: Grouped Table-->

            <partial name="_PagedListPagerPartial" model="Model" />
        </div>

    </div>

    <!--end::Card-->
</div>
<!--end::Container-->