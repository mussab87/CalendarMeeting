@model PaginatedResult<UserDto>
@{
    ViewData["Title"] = "المستخدمين";
    ViewData["action"] = "GetUsers";

    ViewData["PageSize"] = Model.PageSize;
    ViewData["SearchString"] = Model.SearchString;
}

<style>
    .actions-cell {
        text-align: center !important;
        vertical-align: middle !important;
    }

    .actions-buttons {
        display: flex !important;
        justify-content: center !important;
        align-items: center !important;
        gap: 8px !important;
    }

        .actions-buttons .btn {
            margin: 0 !important;
        }
</style>

<!--begin::Container-->
<div class="container">

    <!--begin::Card-->
    <div class="card card-custom">
        <div class="card-header" style="background: #29504D !important;">
            <div class="card-title">
                <span class="card-icon">
                    <i class="la la-users text-white"></i>
                </span>
                <h3 class="card-label" style="color: white !important;">المستخدمين</h3>
            </div>
            <div class="card-toolbar">
                <!--begin::Button-->
                <a id="addUserButton" class="btn btn-light font-weight-bolder">
                    إضافة مستخدم
                    <i class="la la-plus"></i>
                </a>
                <!-- Modal Container -->
                <div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-xl" role="document">
                        <div id="modalContent">
                            <partial name="AddEditUser" model="@Model.UserDto" />
                        </div>

                    </div>
                </div>
                &nbsp;
                <!--begin::Dropdown-->
                @* <div class="dropdown dropdown-inline mr-2">
                    <button type="button" class="btn btn-light-primary font-weight-bolder dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        طباعة
                        <i class="la la-download"></i>
                    </button>
                    <!--begin::Dropdown Menu-->
                    <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
                        <ul class="nav flex-column nav-hover">
                            <li class="nav-header font-weight-bolder text-uppercase text-primary pb-2">اختر من الاختيارات:</li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon la la-print"></i>
                                    <span class="nav-text">Print</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon la la-copy"></i>
                                    <span class="nav-text">Copy</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon la la-file-excel-o"></i>
                                    <span class="nav-text">Excel</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon la la-file-text-o"></i>
                                    <span class="nav-text">CSV</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon la la-file-pdf-o"></i>
                                    <span class="nav-text">PDF</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!--end::Dropdown Menu-->
                </div> *@
                <!--end::Dropdown-->
            </div>
        </div>
        <div class="card-body" style="padding-top: 10px;">
            <div class="text-center pb-2" id="errorUsers" style="font-size: 16px; display: none;">
                <div class="text-danger">
                    <label id="error"></label>
                </div>
            </div>

            <!--begin: Search-->
            <partial name="_PagedListSearch" />
            <!--end: Search-->
            <!--begin: Grouped Table-->
            @if (Model.Items.Any())
            {
                var groupedUsers = Model.Items.GroupBy(u => u.RoleNameArabic ?? u.RoleName ?? "غير محدد").OrderBy(g => g.Key);

                @foreach (var userRole in groupedUsers)
                {
                    <div class="card card-custom mb-5">
                        <div class="card-header">
                            <div class="card-title">
                                <span class="card-icon">
                                    <i class="flaticon2-user text-primary"></i>
                                </span>
                                <h3 class="card-label">@userRole.Key</h3>
                                <span class="badge badge-primary badge-pill ml-2">@userRole.Count()</span>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive mt-4">
                                <table class="table table-bordered table-hover table-checkable mb-0">
                                    <thead style="background: #29504D !important; color: white !important;">
                                        <tr role="row">
                                            <th>الاسم</th>
                                            <th>اسم المستخدم</th>
                                            <th>نوع القسم</th>
                                            <th>القسم</th>
                                            <th>حالة الحساب</th>
                                            <th>حذف الحساب</th>
                                            <th>الإجراءات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in userRole.OrderBy(u => u.Name))
                                        {
                                            <tr>
                                                <td>
                                                    <span class="font-weight-bold text-dark">@user.Name</span>
                                                </td>
                                                <td>
                                                    <span class="text-muted">@user.Username</span>
                                                </td>
                                                <td>
                                                    <span class="text-muted">@(user.DepartmentType ?? "غير محدد")</span>
                                                </td>
                                                <td>
                                                    <span class="text-muted">@(user.Department ?? "غير محدد")</span>
                                                </td>
                                                <td>
                                                    @{
                                                        if ((bool)user.IsActive)
                                                        {
                                                            <span style="width: 137px;">
                                                                <span class="label label-success label-dot mr-2"></span>
                                                                <span class="font-weight-bold text-success">
                                                                    <b>مفعل</b>
                                                                </span>
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span style="width: 137px;">
                                                                <span class="label label-danger label-dot mr-2"></span>
                                                                <span class="font-weight-bold text-danger">
                                                                    <b>غير مفعل</b>
                                                                </span>
                                                            </span>
                                                        }
                                                    }
                                                </td>
                                                <td>
                                                    @if (user.IsDeleted == true)
                                                    {
                                                        <span style="width: 137px;">
                                                            <span class="label font-weight-bold label-lg label-light-danger label-inline">
                                                                <b>تم الحذف</b>
                                                            </span>
                                                        </span>
                                                    }
                                                </td>
                                                <td class="actions-cell">
                                                    <div class="actions-buttons">
                                                        <div class="dropdown dropdown-inline">
                                                            <a href="#" class="btn btn-sm btn-default btn-text-primary btn-hover-primary btn-icon" data-toggle="dropdown">
                                                                <i class="la la-cog"></i>
                                                            </a>
                                                            <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
                                                                <ul class="nav nav-hoverable flex-column" style="margin-right:-30px">
                                                                    <li class="nav-item">
                                                                        <a asp-controller="Account" asp-action="ResetPassword" asp-route-username="@user.Username" asp-route-expired="false" asp-route-adminResetUserPassword="true" class="nav-link">
                                                                            <i class="nav-icon la la-edit" style="margin-right: 10px;"></i>
                                                                            <span class="nav-text">تعديل كلمة المرور</span>
                                                                        </a>
                                                                    </li>
                                                                    <li class="nav-item">
                                                                        <a class="nav-link" href="#">
                                                                            <i class="nav-icon la la-print" style="margin-right: 10px;"></i>
                                                                            <span class="nav-text">طباعة</span>
                                                                        </a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                        <a id="updateUserButton" onclick="updateUserButton('@user.Id')" class="btn btn-sm btn-default btn-text-primary btn-hover-primary btn-icon" title="تعديل المستخدم">
                                                            <i class="la la-edit"></i>
                                                        </a>
                                                        @if (user.IsDeleted != true)
                                                        {
                                                            <a onclick="deleteUserButton('@user.Id')" class="btn btn-sm btn-default btn-text-primary btn-hover-primary btn-icon" title="حذف المستخدم">
                                                                <i class="la la-trash"></i>
                                                            </a>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="card card-custom">
                    <div class="card-body text-center py-10">
                        <div class="symbol symbol-100 symbol-light-warning mb-5">
                            <span class="symbol-label">
                                <i class="flaticon2-information text-warning"></i>
                            </span>
                        </div>
                        <h3 class="text-dark font-weight-bolder mb-3">لا يوجد مستخدمين</h3>
                        <p class="text-muted font-weight-bold mb-5">لم يتم العثور على أي مستخدمين في النظام</p>
                        <button type="button" class="btn btn-primary" id="addUserButton">
                            <i class="la la-plus"></i>
                            إضافة مستخدم جديد
                        </button>
                    </div>
                </div>
            }
            <!--end: Grouped Table-->

            <partial name="_PagedListPagerPartial" model="Model" />
        </div>

    </div>

    <!--end::Card-->
</div>
<!--end::Container-->