@model UserDto;

<!-- Button trigger modal-->
<!-- Modal-->
<form id="addUserForm" asp-controller="Admin" asp-action="AddEditUser" method="post" data-ajax="true" data-ajax-method="post" data-ajax-update="#resultMessage" data-ajax-success="onUserAdded">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title" id="exampleModalLabel"></h2>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i aria-hidden="true" class="ki ki-close"></i>
            </button>
        </div>
        <div class="modal-body" style="padding-top: 10px;">
            <!--begin::Container-->
            <div class="container-fluid">
                <!--begin::Card-->
                <div class="card card-custom card-transparent">
                    <div class="card-body p-0">
                        <!--begin::Wizard-->
                        <div class="wizard wizard-4">
                            <!--begin::Card-->
                            <div class="card card-custom card-shadowless rounded-top-0">
                                <div class="accordion accordion-solid accordion-toggle-plus" id="accordionExample6">
                                    <input type="hidden" asp-for="ActionType" />
                                    @if (Model != null && Model.ActionType != null)
                                    {
                                        @if (Model.ActionType == (int)ActionTypeEnum.Update)
                                        {
                                            <input type="hidden" asp-for="Id" />
                                        }
                                    }
                                    <div class="text-center pb-2" id="errorAdd" style="font-size: 16px; display: none;">
                                        <div class="text-danger">
                                        </div>
                                    </div>

                                    <div class="card">
                                        <div class="card-header">
                                            <div class="card-title" data-toggle="collapse" data-target="#userInformation">
                                                <i class="flaticon2-user"></i>
                                                &nbsp;&nbsp;
                                                <h3>
                                                    بيانات المستخدم
                                                </h3>
                                            </div>
                                        </div>
                                        <div id="userInformation" class="collapse show" data-parent="#accordionExample6">
                                            <div class="card-body p-0">
                                                <div class="row justify-content-center py-4 px-6">
                                                    <div class="col-xl-12 col-xxl-10">
                                                        <!--begin::Wizard Form-->

                                                        <div class="row justify-content-center">
                                                            <div class="col-xl-9">
                                                                <!--begin::Wizard Step 1-->
                                                                <div class="my-3 step">
                                                                    <h3 class="text-dark font-weight-bold mb-10">بيانات حساب المستخدم:</h3>
                                                                    <!--begin::Group-->
                                                                    <div class="form-group row">
                                                                        <label asp-for="Username" class="col-xl-3 col-lg-3 col-form-label"></label>
                                                                        <div class="col-lg-9 col-xl-9">
                                                                            <input class="form-control form-control-solid form-control-lg" asp-for="Username" type="text" />
                                                                            <span asp-validation-for="Username" class="alert-danger"></span>
                                                                        </div>
                                                                    </div>
                                                                    <!--end::Group-->
                                                                    <!--begin::Group-->
                                                                    <div class="form-group row">
                                                                        <label asp-for="Name" class="col-xl-3 col-lg-3 col-form-label"></label>
                                                                        <div class="col-lg-9 col-xl-9">
                                                                            <input class="form-control form-control-solid form-control-lg" asp-for="Name" type="text" />
                                                                            <span asp-validation-for="Name" class="alert-danger"></span>
                                                                        </div>
                                                                    </div>
                                                                    <!--end::Group-->
                                                                    <!--begin::Group-->
                                                                    <div class="form-group row">
                                                                        <label asp-for="DepartmentTypeId" class="col-xl-3 col-lg-3 col-form-label"></label>
                                                                        <div class="col-xl-9 col-lg-9">
                                                                            <select asp-for="DepartmentTypeId" class="form-control form-control-lg form-control-solid" asp-items="@ViewBag.deptType">
                                                                                <option value="">اختر من القائمة</option>
                                                                            </select>
                                                                            <span asp-validation-for="DepartmentTypeId" class="alert-danger"></span>
                                                                        </div>
                                                                    </div>
                                                                    <!--end::Group-->
                                                                    <!--begin::Group-->
                                                                    <div class="form-group row">
                                                                        <label asp-for="DepartmentId" class="col-xl-3 col-lg-3 col-form-label">القسم *</label>
                                                                        <div class="col-xl-9 col-lg-9 d-flex align-items-center">
                                                                            <select asp-for="DepartmentId" id="DepartmentId" class="form-control form-control-lg form-control-solid me-2"
                                                                                    asp-items="ViewBag.departments">
                                                                                <option value="">اختر من القائمة</option>
                                                                            </select>
                                                                            <button type="button" class="btn btn-primary btn-sm rounded-circle" id="btnAddDepartment" title="إضافة قسم جديد">
                                                                                <i class="fas fa-plus"></i>
                                                                            </button>
                                                                            <span asp-validation-for="DepartmentId" class="alert-danger"></span>
                                                                        </div>
                                                                    </div>
                                                                    <!--end::Group-->
                                                                    <!--begin::Group-->
                                                                    <div class="form-group row">
                                                                        <label asp-for="IsActive" class="col-form-label col-xl-3 col-lg-3"></label>
                                                                        <div class="col-xl-9 col-lg-9">
                                                                            <select asp-for="IsActive" class="form-control form-control-lg form-control-solid">
                                                                                <option value="">اختر من القائمة</option>
                                                                                <option value="true">مفعل</option>
                                                                                <option value="false">غير مفعل</option>
                                                                            </select>
                                                                            <span asp-validation-for="IsActive" class="alert-danger"></span>
                                                                        </div>
                                                                    </div>
                                                                    <!--end::Group-->
                                                                    <!--begin::Group-->
                                                                    <div class="form-group row">
                                                                        <label asp-for="IsDeleted" class="col-form-label col-xl-3 col-lg-3"></label>
                                                                        <div class="col-xl-9 col-lg-9">
                                                                            <select asp-for="IsDeleted" class="form-control form-control-lg form-control-solid">
                                                                                <option value="">اختر من القائمة</option>
                                                                                <option value="true">نعم</option>
                                                                                <option value="false">لا</option>
                                                                            </select>
                                                                            <span asp-validation-for="IsDeleted" class="alert-danger"></span>
                                                                        </div>
                                                                    </div>
                                                                    <!--end::Group-->
                                                                </div>
                                                                <!--end::Wizard Step 1-->
                                                            </div>
                                                        </div>
                                                        <!--end::Wizard Form-->
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card">
                                        <div class="card-header">
                                            <div class="card-title collapsed" data-toggle="collapse" data-target="#roleSection">
                                                <i class="flaticon-lock"></i>
                                                &nbsp;&nbsp;
                                                <h3>
                                                    صلاحية المستخدم
                                                </h3>
                                            </div>
                                        </div>
                                        <div id="roleSection" class="collapse show" data-parent="#accordionExample6">
                                            <div class="card-body p-0">
                                                <div class="row justify-content-center py-4 px-6">
                                                    <div class="col-xl-12 col-xxl-10">
                                                        <!--begin::Wizard Form-->

                                                        <div class="row justify-content-center">
                                                            <div class="col-xl-9">
                                                                <!--begin::Wizard Step 1-->
                                                                <div class="my-3 step">
                                                                    <h3 class="text-dark font-weight-bold mb-10">صلاحية المستخدم في النظام:</h3>
                                                                    <!--begin::Group-->
                                                                    <div class="form-group row">
                                                                        <label asp-for="RoleId" class="col-form-label col-xl-3 col-lg-3"></label>
                                                                        <div class="col-xl-9 col-lg-9">
                                                                            <select asp-for="RoleId" class="form-control form-control-lg form-control-solid" asp-items="@ViewBag.roles">
                                                                                <option value="">اختر من القائمة</option>

                                                                            </select>
                                                                            <span asp-validation-for="RoleId" class="alert-danger"></span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <!--end::Wizard Step 1-->
                                                            </div>
                                                        </div>

                                                        <!--end::Wizard Form-->
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--begin::Body-->
                                <!--end::Body-->
                            </div>
                            <!--end::Card-->
                        </div>
                        <!--end::Wizard-->
                    </div>
                </div>
                <!--end::Card-->
            </div>
            <!--end::Container-->
        </div>
        <div class="modal-footer" style="text-align: right; direction: ltr;">
            <button type="button" class="btn btn-danger font-weight-bold" data-dismiss="modal" style="border-radius: 8px; padding: 10px 20px;">
                <i class="fas fa-times me-2"></i>
                رجوع
            </button>
            <button type="submit" class="btn btn-success font-weight-bolder" style="background: #29504D !important; color: white !important; border: none; border-radius: 8px; padding: 10px 25px; margin-right: 8px;">
                <i class="fas fa-save me-2"></i>
                حفظ
            </button>
        </div>
    </div>
</form>

<!-- Add Department Modal -->
<div class="modal fade" id="addDepartmentModal" tabindex="-1" role="dialog" aria-labelledby="addDepartmentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="border-radius: 15px; border: none; box-shadow: 0 10px 30px rgba(0,0,0,0.3);">
            <!-- Modal Header -->
            <div class="modal-header" style="background: #29504D !important; color: white; border-radius: 15px 15px 0 0; border: none; padding: 20px 25px;">
                <div class="d-flex align-items-center">
                    <i class="fas fa-building me-3" style="font-size: 24px;"></i>
                    <h4 class="modal-title mb-0" id="addDepartmentModalLabel" style="color: white !important;">إضافة قسم جديد</h4>
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: white; opacity: 0.8; font-size: 28px;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body" style="padding: 30px 25px;">
                <form id="addDepartmentForm">
                    <!-- Department Type Selection -->
                    <div class="form-group mb-4">
                        <label for="newDepartmentTypeId" class="form-label d-flex align-items-center">
                            <i class="fas fa-layer-group me-2" style="color: #29504D !important;"></i>
                            <span>نوع القسم *</span>
                        </label>
                        <select id="newDepartmentTypeId" class="form-control form-control-lg" required>
                            <option value="">اختر نوع القسم</option>
                        </select>
                    </div>

                    <!-- Department Name -->
                    <div class="form-group mb-4">
                        <label for="newDepartmentName" class="form-label d-flex align-items-center">
                            <i class="fas fa-building me-2" style="color: #28a745;"></i>
                            <span>اسم القسم *</span>
                        </label>
                        <input type="text" id="newDepartmentName" class="form-control form-control-lg"
                               placeholder="أدخل اسم القسم الجديد" required>
                    </div>

                    <!-- Info Message -->
                    <div class="alert alert-info d-flex align-items-center" style="background-color: #e3f2fd; border: 1px solid #bbdefb; color: #1565c0;">
                        <i class="fas fa-info-circle me-2"></i>
                        <small>سيتم حفظ القسم الجديد في النظام وربطه بنوع القسم المحدد</small>
                    </div>

                    <!-- Error Message -->
                    <div id="departmentError" class="alert alert-danger" style="display: none;">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <span id="departmentErrorMessage"></span>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer" style="border: none; padding: 20px 25px 30px; background-color: #f8f9fa; border-radius: 0 0 15px 15px;">
                <button type="button" class="btn btn-success btn-lg" id="btnSaveDepartment" style="background: #29504D !important; color: white !important; border: none; border-radius: 8px; padding: 10px 25px;">
                    <i class="fas fa-save me-2"></i>
                    حفظ القسم
                </button>
                <button type="button" class="btn btn-danger btn-lg" id="btnCancelDepartment" style="border-radius: 8px; padding: 10px 20px;">
                    <i class="fas fa-times me-2"></i>
                    إلغاء
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS for Add Department Button -->
<style>
    #btnAddDepartment {
        background: #29504D !important;
        border: none !important;
        width: 38px;
        height: 38px;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(41, 80, 77, 0.3);
        flex-shrink: 0;
        padding: 0 !important;
        line-height: 38px !important;
    }

        #btnAddDepartment:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(41, 80, 77, 0.4);
            background: #29504D !important;
        }

    #btnAddDepartment {
        color: white !important;
    }

        #btnAddDepartment i {
            font-size: 16px;
            color: white !important;
            line-height: 1 !important;
            display: inline-block !important;
            margin: 0 !important;
            padding: 0 !important;
            width: auto !important;
            height: auto !important;
        }

    #addDepartmentModal .modal-content {
        overflow: hidden;
    }

    #addDepartmentModal .form-control {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        #addDepartmentModal .form-control:focus {
            border-color: #29504D;
            box-shadow: 0 0 0 0.2rem rgba(41, 80, 77, 0.25);
        }

        #addDepartmentModal .form-control.is-invalid {
            border-color: #dc3545;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }
</style>

