    function initializeSelectAllCheckbox() {
        // Add select all checkbox if it doesn't exist
        if ($('#selectAllCheckbox').length === 0) {
            var selectAllHtml = `
                <div class="form-group mb-3" style="background-color: #f8f9fa; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="selectAllCheckbox">
                        <label class="form-check-label font-weight-bold text-primary" for="selectAllCheckbox">
                            تحديد الكل / إلغاء تحديد الكل
                        </label>
                    </div>
                </div>
            `;
            
            // Insert the select all checkbox at the top of the modal content
            $('#modalContent .modal-body').prepend(selectAllHtml);
        }

        // Handle select all checkbox change
        $('#selectAllCheckbox').off('change').on('change', function() {
            var isChecked = $(this).is(':checked');
            
            // Select/deselect all permission checkboxes in the modal
            $('#roleModal input[type="checkbox"]:not(#selectAllCheckbox)').prop('checked', isChecked);
            
            // Update the label text
            var labelText = isChecked ? 'إلغاء تحديد الكل' : 'تحديد الكل / إلغاء تحديد الكل';
            $('#selectAllCheckbox').next('label').text(labelText);
        });

        // Handle individual checkbox changes to update select all state
        $('#roleModal input[type="checkbox"]:not(#selectAllCheckbox)').off('change').on('change', function() {
            var totalCheckboxes = $('#roleModal input[type="checkbox"]:not(#selectAllCheckbox)').length;
            var checkedCheckboxes = $('#roleModal input[type="checkbox"]:not(#selectAllCheckbox):checked').length;
            
            // Update select all checkbox state
            if (checkedCheckboxes === 0) {
                $('#selectAllCheckbox').prop('indeterminate', false).prop('checked', false);
                $('#selectAllCheckbox').next('label').text('تحديد الكل / إلغاء تحديد الكل');
            } else if (checkedCheckboxes === totalCheckboxes) {
                $('#selectAllCheckbox').prop('indeterminate', false).prop('checked', true);
                $('#selectAllCheckbox').next('label').text('إلغاء تحديد الكل');
            } else {
                $('#selectAllCheckbox').prop('indeterminate', true).prop('checked', false);
                $('#selectAllCheckbox').next('label').text('تحديد جزئي');
            }
        });

        // Set initial state of select all checkbox
        var totalCheckboxes = $('#roleModal input[type="checkbox"]:not(#selectAllCheckbox)').length;
        var checkedCheckboxes = $('#roleModal input[type="checkbox"]:not(#selectAllCheckbox):checked').length;
        
        if (checkedCheckboxes === 0) {
            $('#selectAllCheckbox').prop('indeterminate', false).prop('checked', false);
            $('#selectAllCheckbox').next('label').text('تحديد الكل / إلغاء تحديد الكل');
        } else if (checkedCheckboxes === totalCheckboxes) {
            $('#selectAllCheckbox').prop('indeterminate', false).prop('checked', true);
            $('#selectAllCheckbox').next('label').text('إلغاء تحديد الكل');
        } else {
            $('#selectAllCheckbox').prop('indeterminate', true).prop('checked', false);
            $('#selectAllCheckbox').next('label').text('تحديد جزئي');
        }
    }
